@import "variables"

/*-----------------------------------*/

.content_wrap
  .wrapper
    h2.title
      margin-top: 30px
      width: 100%
      height: 60px
      font-size: 2rem
      color: #fff
      background: $col_500
      line-height: 1.75em
      font-weight: 400
      padding-left: 5%
      border-bottom: 1px solid $col_600
      border-top: 1px solid $col_600
      background: linear-gradient(90deg, rgba($col_300, 1) 0%, rgba($col_500, 1) 10%, rgba($col_300, 1) 75%, rgba($col_100, 1) 100%)
      background: -webkit-gradient(90deg, rgba($col_300, 1) 0%, rgba($col_500, 1) 10%, rgba($col_300, 1) 75%, rgba($col_100, 1) 100%)
      background: -moz-linear-gradient(90deg, rgba($col_300, 1) 0%, rgba($col_500, 1) 10%, rgba($col_300, 1) 75%, rgba($col_100, 1) 100%)

    p.text

      position: relative

      span
        font-weight: 400
        font-size: 1rem
        color: $gray_800
        text-indent: 30px

      .text_img
        display: inline-block
        float: left
        width: 400px
        height: 320px
        background-size: cover
        border: #000 solid 1px

