@import "variables"

/*-----------------------------------*/

header.header
  background-image: url('/images/1.jpg')
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  position: relative

  .title_wrap
    width: 500px
    height: 200px
    color: $col_900
    font-family: 'Marck Script', cursive
    padding 15px
    text-align: center

    h1
      margin: 0
      font-size: 6rem
      text-transform: uppercase

    p
      font-size: 2.25rem

  nav.main_nav
    position: absolute
    bottom: 50px
    height: 60px
    width: 100%
    font-family: 'Marck Script', cursive
    background-color: rgba($col_600, 0.5)
    overflow: hidden

    .nav_item
      float: left
      font-size: 1.75rem
      text-align: center
      width: 16.6666667%
      vertical-align: middle
      height: 100%


      a
        color: #fff
        /*background-color: $col_900*/

        text-decoration: none
        display: inline-block
        height: 100%
        width: auto
        line-height: 2.125em
        vertical-align: middle
        border-radius: 30%
        padding: 0 10px
        /*border: $col_900 solid 1px*/
        transition: all 0.3s ease-out 0
        background-color: rgba(#fff, 0)

        &:hover
          color: rgba(#fff, 0.9)
          /*background-color: rgba($col_500, 0.75)*/
          background-color: rgba(#fff, 0.35)
          font-size: 2.25rem
          border: none
          line-height: 1.675em
          /*box-shadow: 0 0 30px 15px rgba(#fff,0.35), inset 0 0 15px 2px rgba(#fff,0.75);*/
          box-shadow: 0 0 30px 15px rgba(#fff,0.35)




